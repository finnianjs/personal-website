---
interface Props {
  company: string;
  role: string;
  location: string;
  dateRange: string;
  bullets: string[];
  tags: string[];
}

const { company, role, location, dateRange, bullets, tags } = Astro.props;
---

<div class="border border-[var(--color-border)] border-l-2 border-l-[var(--color-accent-dim)] p-5 transition-all duration-200 hover:border-[var(--color-accent)] hover:bg-[var(--color-card-hover)] hover:shadow-[0_0_16px_var(--color-glow)]">
  <div class="flex justify-between items-start mb-1">
    <h3 class="text-[var(--color-body)] font-semibold">{company}</h3>
    <span class="text-[10px] text-[var(--color-muted)] whitespace-nowrap ml-4">{dateRange}</span>
  </div>
  <p class="text-xs text-[var(--color-accent-dim)] mb-3">{role} &middot; {location}</p>
  <ul class="space-y-1.5 mb-4">
    {bullets.map((bullet) => (
      <li class="text-[var(--color-muted)] text-xs leading-relaxed flex gap-2">
        <span class="text-[var(--color-border)] select-none">&#8250;</span>
        <span>{bullet}</span>
      </li>
    ))}
  </ul>
  {tags.length > 0 && (
    <div class="flex flex-wrap gap-2">
      {tags.map((tag) => (
        <span class="text-[10px] px-2 py-0.5 border border-[var(--color-border)] text-[var(--color-muted)]">
          {tag}
        </span>
      ))}
    </div>
  )}
</div>
